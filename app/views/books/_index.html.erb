<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'36x36' %>
          <% end %>
        </td>
        <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td id="favorite_buttons_<%= book.id %>"><%= render "favorites/btn", book: book %></td>
        <td id="book_<%= book.id %> .comments-count">コメント数:<%= book.book_comments.count %></td>
        <td class="view_count">閲覧数:<%= book.view_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>