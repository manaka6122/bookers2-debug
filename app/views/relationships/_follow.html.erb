<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <% if users.exists? %>
      <% users.each do |user| %>
      <h2>Follower Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '40x40' %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
    </div>
  </div>
</div>